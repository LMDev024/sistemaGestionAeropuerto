@model IEnumerable<GestionAeropuerto.MVC.Models.VueloViewModel>

@{
    ViewBag.Title = "Gestión de Vuelos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="glyphicon glyphicon-plane"></i> Gestión de Vuelos
            </h2>
            <hr />
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Éxito:</strong> @TempData["Success"]
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i> Nuevo Vuelo
            </a>
            <a href="@Url.Action("TableroSalidas")" class="btn btn-info">
                <i class="glyphicon glyphicon-dashboard"></i> Tablero de Salidas
            </a>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-hover" id="tablaVuelos">
                <thead>
                    <tr>
                        <th>Número de Vuelo</th>
                        <th>Aerolínea</th>
                        <th>Origen</th>
                        <th>Destino</th>
                        <th>Fecha Salida</th>
                        <th>Estado</th>
                        <th>Puerta</th>
                        <th>Asientos Disp.</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vuelo in Model)
                    {
                        <tr>
                            <td><strong>@vuelo.NumeroVuelo</strong></td>
                            <td>@vuelo.NombreAerolinea</td>
                            <td>@vuelo.Origen</td>
                            <td>@vuelo.Destino</td>
                            <td>@vuelo.FechaSalida.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @switch (vuelo.Estado)
                                {
                                    case "Programado":
                                        <span class="label label-primary">@vuelo.Estado</span>
                                        break;
                                    case "Abordando":
                                        <span class="label label-warning">@vuelo.Estado</span>
                                        break;
                                    case "En Vuelo":
                                        <span class="label label-info">@vuelo.Estado</span>
                                        break;
                                    case "Aterrizado":
                                        <span class="label label-success">@vuelo.Estado</span>
                                        break;
                                    case "Cancelado":
                                        <span class="label label-danger">@vuelo.Estado</span>
                                        break;
                                    case "Retrasado":
                                        <span class="label label-warning">@vuelo.Estado</span>
                                        break;
                                    default:
                                        <span class="label label-default">@vuelo.Estado</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(vuelo.NumeroPuerta))
                                {
                                    <span class="badge">@vuelo.NumeroPuerta</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin asignar</span>
                                }
                            </td>
                            <td>
                                @if (vuelo.AsientosDisponibles > 10)
                                {
                                    <span class="text-success">@vuelo.AsientosDisponibles</span>
                                }
                                else if (vuelo.AsientosDisponibles > 0)
                                {
                                    <span class="text-warning">@vuelo.AsientosDisponibles</span>
                                }
                                else
                                {
                                    <span class="text-danger">LLENO</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = vuelo.VueloID })"
                                   class="btn btn-sm btn-info" title="Ver detalles">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaVuelos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[4, "asc"]],
                "pageLength": 25
            });
        });
    </script>
}