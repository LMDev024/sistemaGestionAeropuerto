@model IEnumerable<GestionAeropuerto.MVC.Models.PasajeroViewModel>

@{
    ViewBag.Title = "Gestión de Pasajeros";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="glyphicon glyphicon-user"></i> Gestión de Pasajeros
            </h2>
            <hr />
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Éxito:</strong> @TempData["Success"]
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i> Nuevo Pasajero
            </a>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-hover" id="tablaPasajeros">
                <thead>
                    <tr>
                        <th>Tipo Doc.</th>
                        <th>Número Documento</th>
                        <th>Nombre Completo</th>
                        <th>Nacionalidad</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pasajero in Model)
                    {
                        <tr>
                            <td><span class="label label-info">@pasajero.TipoDocumento</span></td>
                            <td><strong>@pasajero.NumeroDocumento</strong></td>
                            <td>@pasajero.Nombre @pasajero.Apellido</td>
                            <td>@pasajero.Nacionalidad</td>
                            <td>@pasajero.Email</td>
                            <td>@pasajero.Telefono</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = pasajero.PasajeroID })"
                                   class="btn btn-sm btn-info" title="Ver detalles">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = pasajero.PasajeroID })"
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaPasajeros').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[2, "asc"]]
            });
        });
    </script>
}